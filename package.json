{
  "name": "kintone-simple-plugin-template",
  "version": "1.0.0",
  "description": "kintoneプラグインテンプレート",
  "author": "Masanobu Sunohara",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "init": "run-s init:env init:key",
    "init:env": "node scripts/dotenv.js",
    "init:key": "node scripts/genkey.js",
    "build": "run-s build:js build:package",
    "build:js": "rsbuild build",
    "build:package": "kintone-plugin-packer --ppk private.ppk --out dist/plugin.zip lib",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"src/**/*.{js,ts,jsx,tsx}\"",
    "lint:prettier": "prettier --check  \"src/**/*.{js,ts,jsx,tsx}\" --cache",
    "fix": "run-p fix:*",
    "fix:eslint": "run-s 'lint:eslint -- --fix'",
    "fix:prettier": "run-s 'lint:prettier -- --write'",
    "upload": "node scripts/upload.js",
    "watch": "kintone-plugin-uploader dist/plugin.zip --waiting-dialog-ms 3000 --watch"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@kintone/rest-api-client": "^6.1.0",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "immer": "^11.1.0",
    "jotai": "^2.16.0",
    "notistack": "^3.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.69.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^25.0.0",
    "@kintone/dts-gen": "^9.0.0",
    "@kintone/plugin-packer": "^9.0.0",
    "@kintone/plugin-uploader": "^10.0.0",
    "@rsbuild/core": "^1.6.15",
    "@rsbuild/plugin-react": "^1.4.2",
    "@rsbuild/plugin-type-check": "^1.3.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "fs-extra": "^11.3.3",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
